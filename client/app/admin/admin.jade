#admin
  section.quick-links
    .create-restaurant
      a(ui-sref="restaurant.create") Create Restaurant
  section.users
    .pure-g
      .pure-u-1-1.pure-u-sm-1-2
        .form-title {{filteredUsers.length}} Users
      .pure-u-1-1.pure-u-sm-1-2
        form.pure-form.search
          input(type='search' placeholder='Search...' ng-model='userFilter')
    table.pure-table.pure-table-striped(ng-show='filteredUsers.length')
      thead
        tr
          th Name
          th Email
          th Role
          th Provider
          th Active
          th
      tbody
        tr(ng-repeat='user in filteredUsers = (users | filter:userFilter:strict | orderBy: ["last_name", "first_name"])')
          td {{user.full_name}}
          td {{user.email_address}}
          td {{user.role}}
          td {{user.provider}}
          td.text-center
            i.fa.fa-check.success(ng-if='user.active')
            i.fa.fa-close.error(ng-if='!user.active')
          td
            a.trash.pull-right(ng-click='deleteUser(user)')
              i.fa.fa-trash
  section.restaurants
    .pure-g
      .pure-u-1-1.pure-u-sm-1-2
        .form-title {{filteredRestaurants.length}} Restaurants
      .pure-u-1-1.pure-u-sm-1-2
        form.pure-form.search
          input(type='search' placeholder='Search...' ng-model='restaurantFilter')
    table.pure-table.pure-table-striped(ng-show='filteredRestaurants.length')
      thead
        tr
          th Name
          th Address
          th
      tbody
        tr(ng-repeat='restaurant in filteredRestaurants = (restaurants | filter:restaurantFilter:strict)')
          td
            a(ui-sref="restaurant.show({id: restaurant.id})") {{restaurant.name}}
          td {{restaurant.address}}
          td
            a.trash.pull-right(ng-click='deleteRestaurant(restaurant)')
              i.fa.fa-trash

@import "font-awesome/css/font-awesome.css"

//
// Font Awesome Fonts
//

@font-face
  font-family: 'FontAwesome'
  src: url('../bower_components/font-awesome/fonts/fontawesome-webfont.eot?v=4.1.0')
  src: url('../bower_components/font-awesome/fonts/fontawesome-webfont.eot?#iefix&v=4.1.0') format('embedded-opentype'),
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.woff?v=4.1.0') format('woff'),
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.ttf?v=4.1.0') format('truetype'),
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.svg?v=4.1.0#fontawesomeregular') format('svg');
  font-weight: normal
  font-style: normal

//
// App-wide Styles
//

.browsehappy
  background #ccc
  color #000
  margin 0.2em 0
  padding 0.2em 0

.wrapper
  max-width: 1024px
  padding-left: 2em
  padding-right: 2em
  margin-left: auto
  margin-right: auto

.content
  margin-top: 100px
  margin-bottom: 95px

header,
footer
  padding-top: 10px;
  background: white
  position: fixed
  width: 100%
  z-index: 999

header
  border-bottom: 1px solid #e5e5e5
  top: 0

footer
  padding: 0
  margin: 0
  border-top: 1px solid #e5e5e5
  bottom: 0

  .pure-menu
    ul
      padding: 10px 0

.jumbotron
  width: 100%
  font-size: 130%
  text-align: center

#gravatar
  padding: 0

  &:hover, &:focus
    background: initial

  img
    display: block;

[class*="pure-u-"]
  input[type="text"],
  input[type="phone"],
  input[type="email"],
  input[type="password"],
  input[type="date"]
    width: 100%;


// Responsive: Portrait tablets and up
@media screen and (min-width: 768px)
  .wrapper
    max-width 730px


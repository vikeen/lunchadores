//
// App-wide Styles
//
html
    font-family 'Ubuntu', sans-serif !important;

.content
    max-width 1024px
    padding 75px 1em 0
    margin 0 auto

.brand
    text-transform: uppercase
    text-decoration: none
    zoom: 1
    vertical-align middle

    &.a
        color $white;
        text-decoration none

    a
        color $white;
        text-decoration none

    .close
        position: absolute
        top: 20px
        right: 15px

#mainNavigation
    padding 0
    z-index 100

    nav
        list-style none

        .gravatar
            img
                margin-right: 8px

        a
            display block
            text-decoration none
            padding 7px 15px

            i
                margin-right 10px

#mobileNavigation
    border-bottom: 1px solid #E5E5E5;
    padding: 10px 1em 8px
    position: fixed
    background: $white
    right 0
    top 0
    left 0
    z-index 50

    .brand
        color #565D64
        font-size: 130%
        padding-top: 5px
        display: inline-block
        text-decoration: none

    nav
        list-style none

        li
            float: left
            margin-left: 1em

        a
            color #565D64

table
    th.sortable
        cursor pointer;
        text-decoration underline

.breadcrumbs
    margin-bottom: 20px

// Responsive: Portrait tablets and up
@media screen and (min-width: $md)
    #mainNavigation
        position: fixed
        left: 0
        top: 0
        bottom: 0

    .content
        margin-left 304px // sidebar width
        padding-top 45px

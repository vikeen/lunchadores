//
// Font Awesome Fonts
//

@font-face
  font-family 'FontAwesome'
  src url('../bower_components/font-awesome/fonts/fontawesome-webfont.eot?v=4.1.0')
  src url('../bower_components/font-awesome/fonts/fontawesome-webfont.eot?#iefix&v=4.1.0') format('embedded-opentype'),
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.woff?v=4.1.0') format('woff'),
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.ttf?v=4.1.0') format('truetype'),
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.svg?v=4.1.0#fontawesomeregular') format('svg');
  font-weight normal
  font-style normal
  //
  // App-wide Styles
  //
html
  font-family 'Ubuntu', sans-serif !important;

.content
  max-width 1024px
  padding 75px 1em 0
  margin 0 auto

.brand
  text-transform: uppercase
  text-decoration: none
  zoom: 1
  vertical-align middle

  &.a
    color $white;
    text-decoration none

  a
    color $white;
    text-decoration none

  .close
    position: absolute
    top: 20px
    right: 15px

#mainNavigation
  padding 0
  z-index 100

  nav
    list-style none

    .gravatar
      padding-bottom: 5px

    a
      display block
      text-decoration none
      padding 7px 15px

      i
        margin-right 10px

#mobileNavigation
  border-bottom: 1px solid #e5e5e5;
  padding: 10px 1em 8px
  position: fixed
  background: $white
  right 0
  top 0
  left 0
  z-index 50

  .brand
    color #565d64
    font-size: 130%
    padding-top: 5px
    display: inline-block
    text-decoration: none

  nav
    list-style none

    li
      float: left
      margin-left: 1em

    a
      color #565d64

table
  th.sortable
    cursor pointer;
    text-decoration underline

// Responsive: Portrait tablets and up
@media screen and (min-width: $md)
  #mainNavigation
    position: fixed
    left: 0
    top: 0
    bottom: 0

  .content
    margin-left 304px // sidebar width
    padding-top 45px

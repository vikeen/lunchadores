@import "font-awesome/css/font-awesome.css"

// Component styles are injected through grunt
// injector
@import '_colors.styl';
@import '_variables.styl';
@import 'account/login/login.styl';
@import 'admin/admin.styl';
@import 'main/main.styl';
@import 'restaurant/create/restaurant-create.styl';
@import 'restaurant/restaurants.styl';
@import 'forms/form-errors.styl';
@import 'forms/forms.styl';
@import 'gravatar/gravatar.styl';
@import 'lets-eat/lets-eat.styl';
@import 'maps/maps.styl';
@import 'notifications/notifications.styl';
@import 'overrides/pure.styl';
@import 'rating/rating.styl';
@import 'utility/buttons.styl';
@import 'utility/links.styl';
@import 'utility/loading-icon/loading-icon.styl';
@import 'utility/utility.styl';
// endinjector

//
// Font Awesome Fonts
//

@font-face
  font-family: 'FontAwesome'
  src: url('../bower_components/font-awesome/fonts/fontawesome-webfont.eot?v=4.1.0')
  src: url('../bower_components/font-awesome/fonts/fontawesome-webfont.eot?#iefix&v=4.1.0') format('embedded-opentype'),
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.woff?v=4.1.0') format('woff'),
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.ttf?v=4.1.0') format('truetype'),
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.svg?v=4.1.0#fontawesomeregular') format('svg');
  font-weight: normal
  font-style: normal

//
// App-wide Styles
//

html
  font-family: 'Ubuntu', sans-serif !important;

.browsehappy
  background #ccc
  color #000
  margin 0.2em 0
  padding 0.2em 0

.wrapper
  max-width: 1024px
  padding: 0 1em
  margin: 0 auto

.content
  padding-top: 75px
  padding-bottom: 100px

#siteHeader,
footer
  position: fixed
  padding-top: 10px;
  background: white
  width: 100%
  z-index: 999

#siteHeader
  border-bottom: 1px solid #e5e5e5
  top: 0

  a
    &:hover, &:focus
      background: none

  #logout
    min-width: 50px

footer
  padding: 0
  margin: 0
  border-top: 1px solid #e5e5e5
  bottom: 0

  ul
    padding: 10px 0
    margin: 0

    li
      list-style: none

      a, button
        margin: 0 !important

.jumbotron
  width: 100%
  font-size: 130%
  text-align: center

table
  th.sortable
    cursor: pointer;
    text-decoration: underline

// Responsive: Portrait tablets and up
@media screen and (min-width: $md)
  .wrapper
    max-width 730px

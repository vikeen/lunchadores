form.pure-form.pure-form-aligned(name='form', ng-submit='register(form)')
  legend Sign up
  fieldset
    .pure-control-group
      label(for='name') Name
      input(type='text', name='name', ng-model='user.name', required='')
    .pure-control-group
      label(for='email') Email
      input(type='email', name='email', ng-model='user.email', required='')
    .pure-control-group
      label(for='password') Password
      input(type='password', name='password', ng-model='user.password', ng-minlength='3', required='' )

    .pure-controls
      button.pure-button.pure-button-primary(type='submit') Sign up

form.pure-form.pure-form-aligned(name='form', ng-submit='login(form);')
  legend Login
  fieldset
    .pure-control-group
      label(for='email') Email
      input(type='email', name='email', ng-model='user.email', required="required")
    .pure-control-group
      label(for='password') Password
      input(type='password', name='password', ng-model='user.password', required="required")

    .pure-alert.pure-alert-error(ng-if="loginError") {{loginError}}

    .pure-controls
      button.pure-button.pure-button-primary(type='submit') Login
      = ' '
      a.pure-button(href='/signup') Register

form(layout='row' layout-wrap name='form', ng-submit='passwordResetVerificationCtrl.verify(form)')
  legend Password Reset
  md-input-container(flex='100' flex-gt-sm='50')
    label Email
    input(type='email', ng-model='passwordResetVerificationCtrl.email_address', required='required' )
  md-input-container(flex='100' flex-gt-sm='50')
    label New Password
    input(type='password', ng-model='passwordResetVerificationCtrl.new_password', required='required' )

  lunchadores-form-errors(errors='passwordResetVerificationCtrl.errors')

  md-button.md-raised.md-primary(type='submit') Change Password

h2.md-headline Create Restaurant

section.new-restaurant-wizard
  article.information-step(ng-show="restaurantCreateCtrl.activeStep === 'information-step'")
    form(layout='row' layout-wrap ng-submit='restaurantCreateCtrl.restaurantInformationStepComplete()')
      md-input-container(flex='100')
        label Name
        input(type='text' id='name' name='name' required='required' ng-model='restaurantCreateCtrl.newRestaurant.name')
      md-input-container(flex='100')
        label Street
        input(type='text' required='required' ng-model='restaurantCreateCtrl.newRestaurant.street')
      md-input-container(flex='50' flex-gt-sm='50')
        label City
        input(type='text' required='required' ng-model='restaurantCreateCtrl.newRestaurant.city')
      md-input-container(flex='50')
        md-select(placeholder='State' ng-model='restaurantCreateCtrl.newRestaurant.state_abbreviation')
          md-option(ng-repeat='state in restaurantCreateCtrl.states' value='{{::state.abbreviation}}') {{::state.name}}
      md-input-container(flex='50')
        md-select(placeholder='Country' ng-model='restaurantCreateCtrl.newRestaurant.country_abbreviation')
          md-option(ng-repeat='country in restaurantCreateCtrl.countries' value='{{::country.abbreviation}}') {{::country.name}}
      md-input-container(flex='50')
        label ZipCode
        input(type='text' required='required' ng-model='restaurantCreateCtrl.newRestaurant.zipcode')

      //md-chips.md-primary(readonly='readonly')
      //  md-chip(ng-if='letsEatCtrl.randomRestaurant.outside_seating') Outside Seating
      //  md-chip(ng-if='letsEatCtrl.randomRestaurant.vegan') Vegan
      //  md-chip(ng-if='letsEatCtrl.randomRestaurant.vegetarian') Vegetarian
      //md-checkbox.md-primary(flex ng-model='restaurantCreateCtrl.newRestaurant.outside_seating') Outside Seating
      //md-checkbox.md-primary(flex ng-model='restaurantCreateCtrl.newRestaurant.vegan') Vegan
      //md-checkbox.md-primary(flex ng-model='restaurantCreateCtrl.newRestaurant.vegetarian') Vegetarian

      lunchadores-form-errors(errors='restaurantCreateCtrl.errors')
      lunchadores-submit-button(is-submit='restaurantCreateCtrl.verifyingAddress' button-text='Verify Address')

  article.confirmation-step(layout='row' layout-wrap layout-align='start center' ng-show="restaurantCreateCtrl.activeStep === 'confirmation-step'")
    #map.m-b-20(flex='100' flex-gt-sm='50')
    table.pure-table.m-b-20(flex='100' flex-gt-sm='50')
      thead
        tr
          th Name
          th Address
      tbody
        tr
          td {{restaurantCreateCtrl.newRestaurant.name}}
          td {{restaurantCreateCtrl.newRestaurant.formatted_address}}
    span(flex='100' flex-gt-sm='50') Is this information correct?
    div(flex='100' flex-gt-sm='50')
      md-button.md-raised.md-primary(ng-click='restaurantCreateCtrl.createRestaurant()') Yes
      = ' '
      md-button.md-raised.md-warn(ng-click="restaurantCreateCtrl.activeStep = 'information-step'") No

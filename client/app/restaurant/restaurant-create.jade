h2 Create Restaurant

section.new-restaurant-wizard
  article.pure-g.information-step(ng-show="activeStep === 'information-step'")
    form.pure-form.pure-form-stacked(ng-submit='restaurantInformationStepComplete();')
      .pure-u-1-1.pure-u-sm-1-2
        label(for='name') Name
        input(type='text' id='name' name='name' required='required' ng-model='newRestaurant.name')
      .pure-u-1-1.pure-u-sm-1-2
        label(for='address') Address
        input(type='text' id='address' name='address' required='required' ng-model='newRestaurant.address')
      .pure-u-1-1
        label(for='outside_seating', class='pure-checkbox')
          input(type='checkbox', id='outside_seating', name='outside_seating',
          ng-model='newRestaurant.outside_seating')
          = ' Outside Seating'
      .pure-u-1-1
        ul.form-error-messages
          li.error-message(ng-repeat='error in errorMessages')
            | {{error.message}}
      .pure-u-1
        button.pure-button.button-success(type='submit', ng-disabled='verifyingAddress') Verify Address
        i#verificationLoading.fa.fa-circle-o-notch.fa-spin(ng-show='verifyingAddress')
  article.pure-g.confirmation-step(ng-show="activeStep === 'confirmation-step'")
    .pure-u-1.pure-u-md-1-2
      #map
    .pure-u-1-1
      table.pure-table
        thead
          tr
            th Name
            th Address
        tbody
          tr
            td {{newRestaurant.name}}
            td {{newRestaurant.officialAddress}}
    .pure-u-1-1.pure-controls
      span Is this information correct?
      button.pure-button.button-success(ng-click='createRestaurant();') Yes
      = ' '
      button.pure-button.button-error(ng-click="activeStep = 'information-step';") No

section.new-restaurant-wizard(ng-if="isAdmin();")
  h1 Add Restaurant
  article.pure-g.information-step(ng-show="activeStep === 'information-step'")
    form.pure-form(ng-submit='restaurantInformationStepComplete();')
      .pure-u-1-1.pure-u-md-1-2
        input(type='text', name='name', placeholder='Name', required='required',
          ng-model='newRestaurant.name')
      .pure-u-1-1.pure-u-md-1-2
        input(type='text', name='address', placeholder='Address', required='required',
          ng-model='newRestaurant.address')
      .pure-u-1-1
        label(for='outside_seating', class='pure-checkbox')
          input(type='checkbox', id='outside_seating', name='outside_seating',
            ng-model='newRestaurant.outside_seating')
          = ' Outside Seating'
      .pure-u-1
        button.pure-button.button-success(type='submit') Verify Address
  article.pure-g.confirmation-step(ng-show="activeStep === 'confirmation-step'")
    #map.pure-u-1.pure-u-md-1-2
    .pure-u-1
      b Address: {{newRestaurant.officialAddress}}
      br
      b Latitude: {{newRestaurant.lat}}
      br
      b Longitude: {{newRestaurant.lng}}
    .pure-u-1-1.pure-controls
      span Is this information correct?
      button.pure-button.button-success(ng-click='createRestaurant();') Yes
      = ' '
      button.pure-button.button-error(ng-click="activeStep = 'information-step';") No
h1 Current Restaurants

form.pure-form
  //- i.fa.fa-search
  input(type='search' id='restaurantNameSearch' class='pure-input-rounded' name='restaurantNameSearch' placeholder='Search...'
    ng-model='restaurantFilter.name')
table.pure-table
  thead
    th Name
    th Address
    th Outside
    th(ng-if="isAdmin();")
  tbody
    tr(ng-repeat='restaurant in restaurants | filter:restaurantFilter:strict')
      td {{restaurant.name}}
      td {{restaurant.address}}
      td.text-center
        i.fa.fa-check.success(ng-if='restaurant.outside_seating')
        i.fa.fa-close.error(ng-if='!restaurant.outside_seating')
      td(ng-if="isAdmin();")
        button.pure-button.button-error(ng-click='deleteRestaurant(restaurant._id);') Delete

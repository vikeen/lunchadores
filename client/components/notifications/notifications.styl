$notificationPadding = 10px

.notifications
  position: fixed
  left: 1em
  right: 1em
  top: 50px
  z-index: 1

  .notification
    position: relative

  .message
    font-size: 14px

  .success, .error, .warning
    padding: $notificationPadding
    padding-right: ($notificationPadding * 2) + $notificationPadding
    color: $white

  .success
    background: $successColor
  .error
    background: $errorColor
  .warning
    background: $warningColor

  .close-click
    font-size: 16px
    position: absolute
    top: $notificationPadding
    right: $notificationPadding
    cursor: pointer

@media screen and (min-width: $md)
  .notifications
    top: 0
    margin-left: 304px

.lets-eat
  .lets-eat-controls
    //.lets-eat-filter(ng-hide='letsEatCtrl.randomRestaurant')
      //div(layout='row' layout-align='start center')
      //  h2.md-title(flex='25') Distance
      //  md-slider.md-primary(flex='50' md-discrete step='5' min='0' max='letsEatCtrl.maxDistance' aria-label='Distance' ng-model='letsEatCtrl.distance')
    md-button.md-raised.md-primary(ng-click='letsEatCtrl.selectRandomRestaurant()' ng-disabled='letsEatCtrl.restaurantsLoading') {{letsEatCtrl.buttonText}}
    i.loading.fa.fa-circle-o-notch.fa-spin(ng-show='letsEatCtrl.restaurantsLoading')

  .lets-eat-result(layout='row' layout-wrap ng-show='letsEatCtrl.randomRestaurant')
      h2.md-headline(flex='100' flex-gt-sm='50')
        a.default(href="#") {{letsEatCtrl.randomRestaurant.name}}
      h2.md-headline(flex='100' flex-gt-sm='50')
        lunchadores-rating(rating-value='letsEatCtrl.randomRestaurant.rating')
      h4.md-subhead(flex='100')
        a.default(href="#") {{letsEatCtrl.randomRestaurant.address}}


      md-chips.md-primary(readonly='readonly')
        md-chip(ng-if='letsEatCtrl.randomRestaurant.outside_seating') Outside Seating
        md-chip(ng-if='letsEatCtrl.randomRestaurant.vegan') Vegan
        md-chip(ng-if='letsEatCtrl.randomRestaurant.vegetarian') Vegetarian
